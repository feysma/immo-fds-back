<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="002-create-property-images-table" author="feysma">
        <createTable tableName="property_images">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="property_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="file_name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="content_type" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
            <column name="data" type="bytea">
                <constraints nullable="false"/>
            </column>
            <column name="display_order" type="int" defaultValueNumeric="0">
                <constraints nullable="false"/>
            </column>
            <column name="is_primary" type="boolean" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint
                baseTableName="property_images"
                baseColumnNames="property_id"
                referencedTableName="properties"
                referencedColumnNames="id"
                constraintName="fk_property_images_property_id"
                onDelete="CASCADE"/>

        <createIndex indexName="idx_property_images_property_id" tableName="property_images">
            <column name="property_id"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>
