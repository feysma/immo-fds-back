<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="003-create-contact-requests-table" author="feysma">
        <createTable tableName="contact_requests">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="contact_type" type="varchar(20)">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="varchar(15)" defaultValue="NEW">
                <constraints nullable="false"/>
            </column>
            <column name="first_name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="last_name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="phone" type="varchar(50)"/>
            <column name="message" type="text"/>
            <column name="property_reference" type="varchar(20)"/>
            <column name="property_address" type="varchar(500)"/>
            <column name="property_type" type="varchar(30)"/>
            <column name="estimated_price" type="numeric(12, 2)"/>
            <column name="admin_notes" type="text"/>
            <column name="created_at" type="timestamp" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="timestamp" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createIndex indexName="idx_contact_requests_status" tableName="contact_requests">
            <column name="status"/>
        </createIndex>
        <createIndex indexName="idx_contact_requests_contact_type" tableName="contact_requests">
            <column name="contact_type"/>
        </createIndex>
        <createIndex indexName="idx_contact_requests_created_at" tableName="contact_requests">
            <column name="created_at"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>
